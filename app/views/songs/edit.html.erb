<h2>Edit "<%= @song.title %>"</h2>
  <% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being edited:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for @song do |f| %>
    <%= f.text_field :title %>
    <%= f.text_area :released %>
    <%= f.text_area :release_year %>
    <%= f.text_area :artist_name %>
    <%= f.text_area :genre %>
    <%= f.submit %>
  <% end %>

